{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://0.0.0.0:5190;http://localhost:5190",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=ManagementFileDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "BaseDirectories": {
    "BaseStoragePath": "C:\\ManagementFiles",
    "ProjectsPath": "Projects",
    "UsersPath": "Users",
    "TempPath": "Temp",
    "BackupPath": "Backups",
    "LogsPath": "Logs",
    "AutoCreateDirectories": true,
    "ValidatePhysicalPaths": true,
    "CleanupTempFilesIntervalHours": 24,
    "DefaultTempFileRetentionDays": 7,
    "EnableStorageAnalytics": true
  },
  "FileStorage": {
    "BasePath": "C:\\ManagementFiles\\Storage",
    "MaxFileSize": 104857600,
    "AllowedExtensions": [ ".pdf", ".docx", ".doc", ".xlsx", ".xls", ".pptx", ".ppt", ".txt", ".jpg", ".jpeg", ".png", ".gif", ".bmp", ".svg", ".zip", ".rar", ".7z", ".mp4", ".avi", ".mov", ".mp3", ".wav", ".cs", ".js", ".html", ".css", ".xml", ".json" ],
    "ThumbnailPath": "C:\\ManagementFiles\\Thumbnails",
    "PreviewPath": "C:\\ManagementFiles\\Previews",
    "EnableThumbnailGeneration": true,
    "EnablePreviewGeneration": true,
    "VirusScanEnabled": false,
    "BackupEnabled": true,
    "BackupPath": "C:\\ManagementFiles\\Backups",
    "RetentionDays": 365
  },
  "ManagementFileSettings": {
    "FileStoragePath": "C:\\ManagementFiles\\Storage",
    "MaxFileSize": 104857600,
    "AllowedFileTypes": [ ".pdf", ".docx", ".doc", ".xlsx", ".xls", ".pptx", ".ppt", ".txt", ".jpg", ".png", ".gif", ".zip", ".rar" ],
    "ThumbnailPath": "C:\\ManagementFiles\\Thumbnails",
    "PreviewPath": "C:\\ManagementFiles\\Previews"
  }
}
