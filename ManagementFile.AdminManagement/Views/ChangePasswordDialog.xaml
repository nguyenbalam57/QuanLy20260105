<Window x:Class="ManagementFile.AdminManagement.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đổi mật khẩu" 
        Height="700" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#007acc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#007acc"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#007acc"/>
            <Setter Property="BorderBrush" Value="#007acc"/>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d32f2f"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>

    <Border Background="White" Margin="20" CornerRadius="8" >
        <Border.Effect>
            <DropShadowEffect Color="Gray" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
        </Border.Effect>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="🔑 Đổi mật khẩu" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="#333"/>
                <TextBlock Text="{Binding UserFullName, StringFormat='Thay đổi mật khẩu cho: {0}'}" 
                           Foreground="#666" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"
                           FontStyle="Italic"/>
                <TextBlock Text="Vui lòng nhập mật khẩu hiện tại và mật khẩu mới" 
                           Foreground="#666" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                <!-- Current Password -->
                <Label Content="Mật khẩu hiện tại: *" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="CurrentPasswordBox"
                             Style="{StaticResource PasswordBoxStyle}"/>

                <!-- New Password -->
                <Label Content="Mật khẩu mới: *" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="NewPasswordBox"
                             Style="{StaticResource PasswordBoxStyle}"/>

                <!-- Confirm Password -->
                <Label Content="Xác nhận mật khẩu mới: *" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Style="{StaticResource PasswordBoxStyle}"/>

                <!-- Password Requirements -->
                <Border Background="#f0f8ff" BorderBrush="#87ceeb" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="📋 Yêu cầu mật khẩu:" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                        <TextBlock Text="• Tối thiểu 6 ký tự" Foreground="#666" FontSize="12"/>
                        <TextBlock Text="• Mật khẩu mới phải khác mật khẩu hiện tại" Foreground="#666" FontSize="12"/>
                        <TextBlock Text="• Xác nhận mật khẩu phải khớp với mật khẩu mới" Foreground="#666" FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Password Match Indicator -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"
                            Visibility="{Binding PasswordsMatch, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="✅" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="Mật khẩu khớp" 
                               Foreground="#4caf50" 
                               FontSize="12" 
                               Margin="5,0,0,0" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Style="{StaticResource ErrorTextStyle}"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                
                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" 
                            Margin="0,0,20,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="60" Height="4" VerticalAlignment="Center"/>
                    <TextBlock Text="Đang xử lý..." Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#666"/>
                </StackPanel>

                <Button Content="Hủy" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
                
                <Button Content="Đổi mật khẩu" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        IsEnabled="{Binding CanSave}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>