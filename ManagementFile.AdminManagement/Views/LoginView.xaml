<Window x:Class="ManagementFile.AdminManagement.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Admin Management - Đăng Nhập" 
        Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007acc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#cccccc"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d32f2f"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" 
                Margin="20" 
                CornerRadius="8" 
                Effect="{StaticResource CardShadow}">
            
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock Text="🔧" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="ADMIN MANAGEMENT" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Foreground="#333"/>
                    <TextBlock Text="Hệ thống quản lý người dùng" 
                               FontSize="14" 
                               HorizontalAlignment="Center" 
                               Foreground="#666"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Login Form -->
                <StackPanel Grid.Row="2">
                    <!-- Username/Email -->
                    <Label Content="Tên đăng nhập hoặc Email:" 
                           Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="UsernameTextBox"
                             Text="{Binding UsernameOrEmail, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource TextBoxStyle}"
                             Margin="0,0,0,15"/>

                    <!-- Password -->
                    <Label Content="Mật khẩu:" 
                           Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource PasswordBoxStyle}"
                                 Margin="0,0,0,15"/>

                    <!-- Remember Me -->
                    <CheckBox Content="Ghi nhớ đăng nhập" 
                              IsChecked="{Binding RememberMe}"
                              Margin="0,0,0,20"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Style="{StaticResource ErrorTextStyle}"
                               Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Margin="0,0,0,10"/>

                    <!-- Login Button -->
                    <Button Content="ĐĂNG NHẬP" 
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource LoginButtonStyle}"
                            IsEnabled="{Binding CanLogin}"
                            FontSize="16"
                            Height="45"
                            Margin="0,10,0,15"/>

                    <!-- Loading Indicator -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="100" Height="4" 
                                     VerticalAlignment="Center"/>
                        <TextBlock Text="Đang đăng nhập..." 
                                   Margin="10,0,0,0" 
                                   VerticalAlignment="Center"
                                   Style="{StaticResource StatusTextStyle}"/>
                    </StackPanel>

                    <!-- Status Message -->
                    <TextBlock Text="{Binding StatusMessage}" 
                               Style="{StaticResource StatusTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Grid.Row="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <Button Content="Thoát" 
                            Command="{Binding ExitCommand}"
                            Background="Transparent"
                            BorderThickness="1"
                            BorderBrush="#ddd"
                            Foreground="#666"
                            Padding="15,5"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="Xóa lỗi" 
                            Command="{Binding ClearErrorCommand}"
                            Background="Transparent"
                            BorderThickness="1"
                            BorderBrush="#ddd"
                            Foreground="#666"
                            Padding="15,5"
                            Cursor="Hand"
                            Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>