<Window x:Class="ManagementFile.App.Views.Dialogs.Users.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementFile.App.Views.Dialogs.Users"
        xmlns:controls="clr-namespace:ManagementFile.App.Controls"
        mc:Ignorable="d"
        Title="Chọn Người Dùng" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F8F9FA"
        ShowInTaskbar="False"
        MinHeight="400"
        MinWidth="500">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#3498DB"/>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#95A5A6"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="TitleTextBlock"
                       Text="Chọn Người Dùng"
                       FontFamily="Segoe UI"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"/>
            <TextBlock x:Name="MessageTextBlock"
                       Text="Vui lòng chọn người dùng từ danh sách"
                       FontFamily="Segoe UI"
                       FontSize="13"
                       Foreground="#7F8C8D"
                       TextWrapping="Wrap"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <!-- User Selector Container -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <Grid>
                <!-- Single User Selector -->
                <StackPanel x:Name="SingleSelectorPanel"
                            Visibility="Visible">
                    <TextBlock Text="Chọn người dùng"
                               Style="{StaticResource SectionTitle}"/>

                    <controls:UserSelectorControl x:Name="UserSelector"
                                                  Loaded="Selector_Loaded"
                                                  SelectedUser="{Binding SelectedUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  ProjectId="{Binding ProjectId}"
                                                  SearchScope="{Binding SearchScope}"
                                                  Placeholder="Tìm và chọn người dùng..."
                                                  IsReadOnly="False"/>
                </StackPanel>

                <!-- Multi User Selector -->
                <StackPanel x:Name="MultiSelectorPanel"
                            Visibility="Collapsed">
                    <TextBlock Text="Tìm kiếm và chọn người dùng"
                               Style="{StaticResource SectionTitle}"/>

                    <controls:MultiUserSelectorControl x:Name="MultiUserSelector"
                                                       SelectedUsers="{Binding SelectedUsers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       ProjectId="{Binding ProjectId}"
                                                       SearchScope="{Binding SearchScope}"
                                                       Placeholder="@Mention để tìm người dùng..."
                                                       IsReadOnly="False"/>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Help Text -->
        <Border Grid.Row="2"
                Background="#FFF9C4"
                BorderBrush="#FFF59D"
                BorderThickness="1"
                CornerRadius="6"
                Padding="14"
                Margin="0,16,0,0">
            <StackPanel>
                <TextBlock FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold" Foreground="#F57F17" Margin="0,0,0,6">
                    <Run Text="💡" FontSize="14"/>
                    <Run Text="Hướng dẫn sử dụng"/>
                </TextBlock>
                <TextBlock x:Name="HelpText"
                           Text="• Nhập tên hoặc email để tìm kiếm&#x0a;• Click hoặc nhấn Enter để chọn&#x0a;• F5 để làm mới danh sách"
                           FontFamily="Segoe UI"
                           FontSize="11"
                           Foreground="#F57F17"
                           TextWrapping="Wrap"
                           LineHeight="18"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Result Summary -->
            <TextBlock x:Name="ResultSummaryText"
                       Grid.Column="0"
                       Text="Chưa có người dùng được chọn"
                       FontFamily="Segoe UI"
                       FontSize="12"
                       Foreground="#7F8C8D"
                       VerticalAlignment="Center"/>

            <!-- Buttons -->
            <Button Grid.Column="1"
                    Content="Hủy"
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"/>

            <Button Grid.Column="2"
                    x:Name="ConfirmButton"
                    Content="Xác nhận"
                    Style="{StaticResource PrimaryButton}"
                    Click="ConfirmButton_Click"
                    IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>