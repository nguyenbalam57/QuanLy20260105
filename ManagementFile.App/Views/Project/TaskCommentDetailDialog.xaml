<Window x:Class="ManagementFile.App.Views.Project.TaskCommentDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ManagementFile.App.Controls"
        xmlns:cv="clr-namespace:ManagementFile.App.Converters"
        Title="{Binding WindowTitle}" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="800" MinWidth="900"
        Background="#F8F9FA"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>

        <!-- Value Converters -->
        <cv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <cv:EnumToStringConverter x:Key="EnumToStringConverter"/>
        

        <!-- Modern Styles -->
        <Style x:Key="ModernTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="LabelTextBlock" TargetType="TextBlock" BasedOn="{StaticResource ModernTextBlock}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="ReadOnlyTextBlock" TargetType="TextBlock" BasedOn="{StaticResource ModernTextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#566573"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A93226"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Styles -->
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Collapsible Section -->
        <Style x:Key="CollapsibleHeader" TargetType="ToggleButton">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, 
                                                  Converter={StaticResource BooleanToArrowConverter}}"
                                           FontSize="12" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" 
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Name="Border"
    Background="{TemplateBinding Background}"
    BorderBrush="{TemplateBinding BorderBrush}"
    BorderThickness="{TemplateBinding BorderThickness}"
    CornerRadius="8"
    Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- DatePicker TextBox -->
                                <DatePickerTextBox Grid.Column="0"
                       x:Name="PART_TextBox"
                       Foreground="{TemplateBinding Foreground}"
                       Background="Transparent"
                       BorderThickness="0"
                       Padding="0"
                       VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                       HorizontalContentAlignment="Left"/>

                                <!-- Calendar Button -->
                                <Button Grid.Column="1"
            x:Name="PART_Button"
            Background="Transparent"
            BorderThickness="0"
            Padding="8,0"
            VerticalAlignment="Stretch">
                                    <Path Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
              Fill="#7F8C8D"
              Width="16"
              Height="16"
              Stretch="Uniform"/>
                                </Button>

                                <!-- Popup for Calendar -->
                                <Popup Grid.Column="0"
           x:Name="PART_Popup"
           StaysOpen="False"
           PlacementTarget="{Binding ElementName=Border}"
           Placement="Bottom"
           AllowsTransparency="True">
                                    <Border Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="1"
                CornerRadius="8"
                Padding="4"
                Effect="{StaticResource DropShadowEffect}">
                                        <Calendar x:Name="PART_Calendar"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3498DB"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3498DB" Opacity="0.3" ShadowDepth="0" BlurRadius="8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F8F9FA"/>
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsViewMode}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="{Binding WindowTitle}" 
                            FontFamily="Segoe UI"
                            FontSize="20" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"
                            Foreground="#2C3E50"
                            Margin="0,0,0,10"/>
                <TextBlock Text="{Binding ParentCommentSummary}" 
                            FontFamily="Segoe UI"
                            FontSize="16" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"
                            Foreground="#2C3E50"
                            Margin="0,0,0,10"
                            Visibility="{Binding IsReply, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer   Grid.Row="1" 
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        PanningMode="VerticalOnly"
                        Background="Transparent"
                        Margin="0,20,0,0">
            
            <StackPanel Margin="0,0,10,0">

                <!-- Basic Information Section -->
                <Expander Style="{StaticResource ModernExpander}" IsExpanded="True">
                    <Expander.Header>
                        <TextBlock Text="📝 Thông tin cơ bản" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                    </Expander.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            

                            <!-- Content -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Nội dung bình luận " Style="{StaticResource FieldLabel}"/>
                                    <TextBlock Text="*" 
                                               Foreground="#E74C3C" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <!-- Edit Mode -->
                                <TextBox x:Name="ContentTextBox" 
                                         Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="100"
                                         VerticalContentAlignment="Top"
                                         MaxLength="4000"
                                         ToolTip="Nhập nội dung bình luận"/>
                                <TextBlock Text="{Binding Content, Converter={StaticResource LengthToCountConverter}, ConverterParameter=4000}"
                                           FontSize="11"
                                           Foreground="#7F8C8D"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Right"
                                           Margin="0,6,6,0"/>
                            </StackPanel>

                            <!-- Comment Type -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,20,0,0">
                                <TextBlock Text="Loại bình luận" Style="{StaticResource FieldLabel}"/>
                                <!-- Edit Mode -->
                                <ComboBox ItemsSource="{Binding CommentTypes}"
                                          SelectedItem="{Binding SelectedCommentType, Mode=TwoWay}"
                                          DisplayMemberPath="DisplayText"
                                          SelectedValuePath="Value"
                                          Style="{StaticResource ModernComboBox}"
                                          ToolTip="Chọn loại bình luận"/>
                            </StackPanel>

                            <!-- Priority -->
                            <StackPanel Grid.Row="1" Grid.Column="3" Margin="0,20,0,0">
                                <TextBlock Text="Độ ưu tiên" Style="{StaticResource FieldLabel}"/>
                                <Grid>
                                    <!-- Priority -->
                                    <ComboBox x:Name="PriorityComboBox"
                                              ItemsSource="{Binding Priorities}"
                                              SelectedValue="{Binding Priority, Mode=TwoWay}"
                                              DisplayMemberPath="DisplayText"
                                              SelectedValuePath="Value"
                                              Style="{StaticResource ModernComboBox}"
                                              ToolTip="Chọn độ ưu tiên"/>
                                </Grid>
                            </StackPanel>

                            <!-- Issue Title -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,20,0,0">
                                <TextBlock Text="Tiêu đề vấn đề (nếu có)" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding IssueTitle, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"
                                         MaxLength="500"
                                         ToolTip="Nhập tiêu đề vấn đề. Tóm tắt nội dung"/>
                            </StackPanel>

                            <StackPanel Grid.Row="4" 
                                        Margin="0,20,0,0" 
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding IsViewMode, Converter={StaticResource InverseBooleanConverter}}">
                                <CheckBox Style="{StaticResource ModernCheckBox}"
                                          IsChecked="{Binding AutoAssignToCreator, Mode=TwoWay}"
                                          ToolTip="Chọn sẽ gửi thông báo (Add / Update)">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Gửi thông báo"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                            <StackPanel Grid.Row="4" 
                                        Grid.Column="3" 
                                        Margin="0,20,0,0" 
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding IsAddMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Style="{StaticResource ModernCheckBox}"
                                          IsChecked="{Binding SendNotification, Mode=TwoWay}"
                                          ToolTip="Tự động điền người nhận là người tạo bình luận này">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tự động điền người thực hiện"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Assignment Section -->
                <Expander Style="{StaticResource ModernExpander}" IsExpanded="True">
                    <Expander.Header>
                        <TextBlock Text="👥 Phân công và Giao việc" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                    </Expander.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Reviewer -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,0">
                                <TextBlock Text="Người xác nhận" Style="{StaticResource FieldLabel}"/>
                                <controls:UserSelectorControl x:Name="ReviewerSelector"
                                                              Loaded="ReviewerSelector_Loaded"
                                                              SelectedUser="{Binding SelectedReviewer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              ProjectId="{Binding ProjectId}"
                                                              SearchScope="ProjectMembers"
                                                              Placeholder="Chọn người xác nhận..."
                                                              IsReadOnly="{Binding IsReadOnly}"/>
                                
                            </StackPanel>

                            <!-- Assignee -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,0">
                                <TextBlock Text="Người thực hiện" Style="{StaticResource FieldLabel}"/>
                                <controls:UserSelectorControl x:Name="AssigneeSelector"
                                                              Loaded="AssignSelector_Loaded"
                                                              SelectedUser="{Binding SelectedAssignee, Mode=TwoWay}"
                                                              ProjectId="{Binding ProjectId}"
                                                              SearchScope="{Binding AssigneeSearchScope}"
                                                              Placeholder="Chọn người thực hiện..."
                                                              IsReadOnly="{Binding IsReadOnly}"/>
                                
                            </StackPanel>

                            <!-- Mentioned Users -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,20,0,0">
                                <TextBlock Text="Mention Users (@)" Style="{StaticResource FieldLabel}"/>
                                <controls:MultiUserSelectorControl x:Name="MentionedUsersSelector"
                                                                   SelectedUsers="{Binding MentionedUsers, Mode=TwoWay}"
                                                                   ProjectId="{Binding ProjectId}"
                                                                   SearchScope="{Binding MentionSearchScope}"
                                                                   Placeholder="Nhập tên để mention user..."
                                                                   IsReadOnly="{Binding IsViewMode}"/>
                            </StackPanel>

                            <!-- Time & Deadline -->
                            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Estimated Time -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,20,0,0">
                                    <TextBlock Text="Thời gian ước tính (h)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding EstimatedFixTime, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource ModernTextBox}"
                                             ToolTip="Nhập thời gian ước tính. Thời gian ước tính phải từ 0 đến 999.99 h"/>
                                </StackPanel>

                                <!-- Actual Time -->
                                <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,20,0,0">
                                    <TextBlock Text="Thời gian thực tế (h)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding ActualFixTime, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource ModernTextBox}"
                                             ToolTip="Nhập thời gian hoàn thành thực tế. Thời gian hoàn thành thực tế phải từ 0 đến 999.99 h"/>
                                </StackPanel>

                                <!-- Due Date -->
                                <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,20,0,0">
                                    <TextBlock Text="Thời gian phải hoàn thành" Style="{StaticResource FieldLabel}"/>
                                    <DatePicker SelectedDate="{Binding DueDate, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource ModernDatePicker}"
                                                ToolTip="Chọn thời gian phải hoàn thành"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Details & Attachments Section -->
                <Expander Style="{StaticResource ModernExpander}" IsExpanded="False">
                    <Expander.Header>
                        <TextBlock Text="📎 Chi tiết và File đính kèm" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                    </Expander.Header>
                    <StackPanel>
                        <StackPanel>
                            <!-- Suggested Fix -->
                            <StackPanel>
                                <TextBlock Text="Đề xuất giải pháp" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding SuggestedFix, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         MaxLength="2000"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="100"
                                         VerticalContentAlignment="Top"
                                         ToolTip="Nhập đề xuất giải pháp. Đề xuất giải pháp không được quá 2000 ký tự"/>
                                <TextBlock Text="{Binding SuggestedFix, Converter={StaticResource LengthToCountConverter}, ConverterParameter=2000}"
                                           FontSize="11"
                                           Foreground="#7F8C8D"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Right"
                                           Margin="0,6,6,0"/>
                            </StackPanel>

                            <!-- Related Module -->
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Liên quan" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding RelatedModule, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"
                                         MaxLength="1000"
                                         ToolTip="Nhập nội dung liên quan. Nội dung liên quan không được quá 1000 ký tự"/>
                                <TextBlock Text="{Binding RelatedModule, Converter={StaticResource LengthToCountConverter}, ConverterParameter=1000}"
                                           FontSize="11"
                                           Foreground="#7F8C8D"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Right"
                                           Margin="0,6,6,0"/>
                            </StackPanel>

                            <!-- File Lists -->
                            <Grid Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Related Files -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="File liên quan" Style="{StaticResource FieldLabel}"/>
                                    <controls:FileListControl x:Name="RelatedFilesControl"
                                                              FileList="{Binding RelatedFiles, Mode=TwoWay}"
                                                              IsReadOnly="{Binding IsViewMode}"
                                                              AllowMultiple="True"/>
                                </StackPanel>

                                <!-- Related Screenshots -->
                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="Screenshot" Style="{StaticResource FieldLabel}"/>
                                    <controls:FileListControl x:Name="ScreenshotsControl"
                                                              FileList="{Binding RelatedScreenshots, Mode=TwoWay}"
                                                              IsReadOnly="{Binding IsViewMode}"
                                                              AllowMultiple="True"
                                                              FileFilter="Image files (*.jpg;*.jpeg;*.png;*.gif)|*.jpg;*.jpeg;*.png;*.gif"/>
                                </StackPanel>

                                <!-- Related Documents -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,20,0,0">
                                    <TextBlock Text="Tài liệu" Style="{StaticResource FieldLabel}"/>
                                    <controls:FileListControl x:Name="DocumentsControl"
                                                              FileList="{Binding RelatedDocuments, Mode=TwoWay}"
                                                              IsReadOnly="{Binding IsViewMode}"
                                                              AllowMultiple="True"
                                                              FileFilter="Documents (*.pdf;*.doc;*.docx;*.txt)|*.pdf;*.doc;*.docx;*.txt"/>
                                </StackPanel>

                                <!-- Attachments -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,20,0,0">
                                    <TextBlock Text="File đính kèm" Style="{StaticResource FieldLabel}"/>
                                    <controls:FileListControl x:Name="AttachmentsControl"
                                                              FileList="{Binding Attachments, Mode=TwoWay}"
                                                              IsReadOnly="{Binding IsViewMode}"
                                                              AllowMultiple="True"/>
                                </StackPanel>

                                <!-- Tags -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3 " Margin="0,20,0,0">
                                    <TextBlock Text="Tags" Style="{StaticResource FieldLabel}"/>
                                    <controls:TagInputControl x:Name="TagsControl"
                                                              Tags="{Binding Tags, Mode=TwoWay}"
                                                              IsReadOnly="{Binding IsViewMode}"
                                                              Placeholder="Nhập tag và nhấn Enter..."/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Resolution Section (chỉ hiển thị khi không phải Add mode) -->
                <Expander Style="{StaticResource ModernExpander}" IsExpanded="True"
                        Visibility="{Binding IsAddMode, Converter={StaticResource InverseBooleanConverter}, 
                                    ConverterParameter=Collapsed}">
                    <Expander.Header>
                        <TextBlock Text="✅ Giải quyết và Xác nhận" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                    </Expander.Header>
                    <StackPanel>
                        <StackPanel>
                            <!-- Status & Flags -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Flags -->
                                <StackPanel Grid.Column="2" Margin="0,0,0,0" HorizontalAlignment="Left">
                                    <CheckBox Style="{StaticResource ModernCheckBox}"
                                                  IsChecked="{Binding RequiresDiscussion, Mode=TwoWay}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Cần thảo luận"/>
                                            </StackPanel>
                                    </CheckBox>
                                </StackPanel>
                                <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                    <CheckBox Style="{StaticResource ModernCheckBox}"
                                              IsChecked="{Binding IsAgreed, Mode=TwoWay}"
                                              ToolTip="Người thực hiện có đồng ý với comment này không?">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Đồng ý sửa lỗi"/>
                                        </StackPanel>
                                    </CheckBox>
                                </StackPanel>

                            </Grid>
                            <!-- Resolution Notes -->
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Ghi chú giải quyết" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding ResolutionNotes, UpdateSourceTrigger=PropertyChanged}" 
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="100"
                                         VerticalContentAlignment="Top"
                                         MaxLength="2000"
                                         Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="{Binding ResolutionNotes, Converter={StaticResource LengthToCountConverter}, ConverterParameter=2000}"
                                           FontSize="11"
                                           Foreground="#7F8C8D"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Right"
                                           Margin="0,6,6,0"/>
                            </StackPanel>

                            <!-- Commit ID -->
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Nội dung liên quan (Người thực hiện)" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding ResolutionCommitId, UpdateSourceTrigger=PropertyChanged}"
                                         MaxLength="100"
                                         Style="{StaticResource ModernTextBox}"
                                         ToolTip="Nhập nội dung liên quan, ID hoặc phần liên quan. \r\nNgười thực hiện ghi chú sau khi giải quyết"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Verification -->
                                <StackPanel Grid.Column="0" Margin="10,20,0,0" VerticalAlignment="Center">
                                    <CheckBox Style="{StaticResource ModernCheckBox}"
                                              IsChecked="{Binding IsVerified, Mode=TwoWay}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Xác nhận"/>
                                        </StackPanel>
                                    </CheckBox>
                                    <CheckBox Style="{StaticResource ModernCheckBox}" 
                                              IsChecked="{Binding IsBlocking, Mode=TwoWay}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Khóa"/>
                                        </StackPanel>
                                    </CheckBox>
                                </StackPanel>

                                <!-- Verification Notes -->
                                <StackPanel Grid.Column="2" Margin="0,20,0,0">
                                    <TextBlock Text="Ghi chú xác nhận" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding VerificationNotes, UpdateSourceTrigger=PropertyChanged}" 
                                             MinHeight="60"
                                             MaxLength="2000"
                                             Style="{StaticResource ModernTextBox}"/>
                                    <TextBlock Text="{Binding VerificationNotes, Converter={StaticResource LengthToCountConverter}, ConverterParameter=2000}"
                                               FontSize="11"
                                               Foreground="#7F8C8D"
                                               FontStyle="Italic"
                                               HorizontalAlignment="Right"
                                               Margin="0,6,6,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Status -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,20,0,0">
                                <TextBlock Text="Trạng thái" Style="{StaticResource FieldLabel}"/>
                                <ComboBox ItemsSource="{Binding CommentStatuses}"
                                          SelectedValue="{Binding CommentStatus, Mode=TwoWay}"
                                          DisplayMemberPath="DisplayText"
                                          SelectedValuePath="Value"
                                          Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>

                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Metadata Section -->
                <Expander Style="{StaticResource ModernExpander}" IsExpanded="False"
                          Visibility="{Binding IsAddMode, Converter={StaticResource InverseBooleanConverter}, 
                            ConverterParameter=Collapsed}">
                    <Expander.Header>
                        <TextBlock Text="📊 Thông tin bổ sung" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                    </Expander.Header>
                    <StackPanel>
                        <StackPanel>
                            <!-- Audit Information (View Only) -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Created Info -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,0">
                                    <TextBlock Text="Thông tin tạo" Style="{StaticResource FieldLabel}"/>
                                    <TextBlock Text="{Binding CreatedInfo}" Style="{StaticResource ReadOnlyTextBlock}"/>
                                </StackPanel>

                                <!-- Updated Info -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,0">
                                    <TextBlock Text="Thông tin cập nhật" Style="{StaticResource FieldLabel}"/>
                                    <TextBlock Text="{Binding UpdatedInfo}" Style="{StaticResource ReadOnlyTextBlock}"/>
                                </StackPanel>

                                <!-- Resolved Info -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,20,0,0"
                                            Visibility="{Binding HasResolvedInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Thông tin giải quyết" Style="{StaticResource FieldLabel}"/>
                                    <TextBlock Text="{Binding ResolvedInfo}" Style="{StaticResource ReadOnlyTextBlock}"/>
                                </StackPanel>

                                <!-- Verified Info -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,20,0,0"
                                            Visibility="{Binding HasVerifiedInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Thông tin xác nhận" Style="{StaticResource FieldLabel}"/>
                                    <TextBlock Text="{Binding VerifiedInfo}" Style="{StaticResource ReadOnlyTextBlock}"/>
                                </StackPanel>

                                <!-- Version Info -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,0,0">
                                    <TextBlock Text="Thông tin version" Style="{StaticResource FieldLabel}"/>
                                    <TextBlock Text="{Binding VersionInfo}" Style="{StaticResource ReadOnlyTextBlock}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center"
                            Visibility="{Binding HasStatusMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Style="{StaticResource ModernTextBlock}"
                               Foreground="{Binding StatusMessageColor}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">

                    <!-- View Mode Buttons -->
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding IsViewMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Content="✏️ Chỉnh sửa" 
                                Command="{Binding EditCommand}"
                                Style="{StaticResource PrimaryButton}"
                                ToolTip="Chỉnh sửa bình luận (F2)"
                                Margin="0,0,20,0"/>

                        <Button Content="🗑️ Xóa" 
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource DangerButton}"
                                ToolTip="Xóa bình luận (Delete)"
                                Margin="0,0,20,0"/>
                    </StackPanel>

                    <!-- Edit/Add Mode Buttons -->
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding IsViewMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Button Content="{Binding SaveButtonText}" 
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource SuccessButton}"
                                ToolTip="Lưu bình luận (Ctrl + S)"
                                Margin="0,0,20,0"/>

                        <Button Content="↩️ Hủy" 
                                Command="{Binding CancelCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,20,0"/>
                    </StackPanel>

                    <!-- Common Buttons -->
                    <Button Content="❌ Đóng" 
                            Command="{Binding CloseCommand}"
                            Style="{StaticResource SecondaryButton}"
                            ToolTip="Đóng bình luận (Esc)"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <!-- Keyboard Shortcuts -->
    <Window.InputBindings>
        <KeyBinding Command="{Binding SaveCommand}" Key="S" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding CloseCommand}" Key="Escape"/>
        <KeyBinding Command="{Binding EditCommand}" Key="F2"/>
        <KeyBinding Command="{Binding DeleteCommand}" Key="Delete"/>
    </Window.InputBindings>
</Window>