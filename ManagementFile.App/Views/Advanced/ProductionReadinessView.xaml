<UserControl x:Class="ManagementFile.App.Views.Advanced.ProductionReadinessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Styles -->
        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Color="#E0E0E0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#6C757D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F6FA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Header -->
                <TextBlock Text="🚀 Production Readiness Dashboard" FontSize="28" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <!-- Environment Status Bar -->
                <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1" 
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Border Background="{Binding EnvironmentColor}" 
                                    Style="{StaticResource StatusIndicatorStyle}"/>
                            <TextBlock Text="{Binding EnvironmentDisplayText}" FontSize="16" FontWeight="SemiBold" 
                                       VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding ApplicationInfoText}" FontSize="14" 
                                       Foreground="#6C757D" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="🔄 Reload Config" Command="{Binding ReloadConfigCommand}"
                                    Style="{StaticResource ActionButtonStyle}"/>
                            <Button Content="📤 Export Report" Command="{Binding ExportReportCommand}"
                                    Style="{StaticResource ActionButtonStyle}" Background="#28A745"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- System Health Column -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🏥 System Health" FontSize="18" FontWeight="SemiBold" 
                                   Margin="10,0,0,10" Foreground="#2C3E50"/>

                        <!-- Overall Health Status -->
                        <Border Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Overall Health" FontSize="14" FontWeight="SemiBold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Border Background="{Binding HealthStatusColor}" 
                                                    Style="{StaticResource StatusIndicatorStyle}"/>
                                            <TextBlock Text="{Binding OverallHealthText}" FontSize="16" FontWeight="Bold"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding LastHealthCheckText}" FontSize="12" 
                                                   Foreground="#6C757D" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="1" Content="🔄" ToolTip="Refresh Health Checks"
                                            Command="{Binding PerformHealthCheckCommand}"
                                            Width="32" Height="32" Background="Transparent" BorderThickness="0"
                                            Click="RefreshHealthChecks_Click"/>
                                </Grid>

                                <!-- Health Check Results -->
                                <ItemsControl ItemsSource="{Binding HealthCheckResults}" Margin="0,10,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource MetricCardStyle}" Margin="0,2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="{Binding StatusIcon}" FontSize="16" 
                                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding Description}" FontSize="10" 
                                                                   Foreground="#6C757D" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="2" Text="{Binding ResponseTime, StringFormat={}{0}ms}" 
                                                               FontSize="10" Foreground="#6C757D" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Monitoring Controls -->
                        <Border Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="System Monitoring" FontSize="14" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding MonitoringStatusText}" FontSize="12" 
                                                   Foreground="#6C757D" Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding MonitoringUptimeText}" FontSize="12" 
                                                   Foreground="#6C757D"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsMonitoring}" Content="Active" 
                                                  Click="MonitoringToggle_Click" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Performance Metrics -->
                                <StackPanel Margin="0,10,0,0">
                                    <TextBlock Text="Recent Performance" FontSize="12" FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    
                                    <Border Style="{StaticResource MetricCardStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="CPU Usage" FontSize="10" Foreground="#6C757D"/>
                                                <TextBlock Text="{Binding CurrentCpuUsage, StringFormat={}{0:F1}%}" 
                                                           FontSize="14" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Memory" FontSize="10" Foreground="#6C757D"/>
                                                <TextBlock Text="{Binding CurrentMemoryUsage, StringFormat={}{0}MB}" 
                                                           FontSize="14" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Security Column -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="🛡️ Security Status" FontSize="18" FontWeight="SemiBold" 
                                   Margin="10,0,0,10" Foreground="#2C3E50"/>

                        <!-- Security Overview -->
                        <Border Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Security Level" FontSize="14" FontWeight="SemiBold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Border Background="{Binding SecurityLevelColor}" 
                                                    Style="{StaticResource StatusIndicatorStyle}"/>
                                            <TextBlock Text="{Binding SecurityLevelText}" FontSize="16" FontWeight="Bold"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding SecurityStatusText}" FontSize="12" 
                                                   Foreground="#6C757D" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="1" Content="🔍" ToolTip="Security Scan"
                                            Command="{Binding PerformSecurityScanCommand}"
                                            Width="32" Height="32" Background="Transparent" BorderThickness="0"
                                            Click="SecurityScan_Click"/>
                                </Grid>

                                <!-- Security Metrics -->
                                <StackPanel Margin="0,10,0,0">
                                    <Border Style="{StaticResource MetricCardStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Violations" FontSize="10" Foreground="#6C757D"/>
                                                <TextBlock Text="{Binding SecurityViolations}" 
                                                           FontSize="14" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Blocked IPs" FontSize="10" Foreground="#6C757D"/>
                                                <TextBlock Text="{Binding BlockedIPsCount}" 
                                                           FontSize="14" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Security Actions -->
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="Clear Blocks" Command="{Binding ClearBlockedIPsCommand}"
                                            Style="{StaticResource ActionButtonStyle}" Background="#DC3545"/>
                                    <Button Content="Export Log" Command="{Binding ExportSecurityLogCommand}"
                                            Style="{StaticResource ActionButtonStyle}" Background="#6C757D"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Alerts -->
                        <Border Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Recent Alerts" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding RecentAlertsCount}" FontSize="14" 
                                               FontWeight="Bold" Foreground="#DC3545"/>
                                </Grid>

                                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                                    <ItemsControl ItemsSource="{Binding RecentAlerts}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource MetricCardStyle}" Margin="0,2">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock Grid.Column="0" Text="{Binding LevelIcon}" 
                                                                   FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Title}" FontSize="11" FontWeight="SemiBold"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding Description}" FontSize="9" 
                                                                       Foreground="#6C757D" TextTrimming="CharacterEllipsis"/>
                                                        </StackPanel>
                                                        <TextBlock Grid.Column="2" Text="{Binding Timestamp, StringFormat=HH:mm}" 
                                                                   FontSize="9" Foreground="#6C757D" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Configuration & Deployment Column -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="⚙ Configuration &amp; Deployment" FontSize="18" FontWeight="SemiBold" 
                                   Margin="10,0,0,10" Foreground="#2C3E50"/>

                        <!-- Configuration Status -->
                        <Border Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Configuration" FontSize="14" FontWeight="SemiBold"/>
                                
                                <StackPanel Margin="0,10,0,0">
                                    <Border Style="{StaticResource MetricCardStyle}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding ConfigurationStatusText}" FontSize="12"/>
                                            <TextBlock Text="{Binding FeatureFlagsText}" FontSize="12" 
                                                       Foreground="#6C757D" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Feature Flags -->
                                <StackPanel Margin="0,10,0,0">
                                    <TextBlock Text="Key Features" FontSize="12" FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    
                                    <Border Style="{StaticResource MetricCardStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Advanced Search" FontSize="10"/>
                                                <TextBlock Grid.Column="1" Text="{Binding IsAdvancedSearchEnabled, 
                                                           Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                           FontSize="10" Foreground="Green"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Bulk Operations" FontSize="10"/>
                                                <TextBlock Grid.Column="1" Text="{Binding IsBulkOperationsEnabled, 
                                                           Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                           FontSize="10" Foreground="Green"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Security Hardening" FontSize="10"/>
                                                <TextBlock Grid.Column="1" Text="{Binding IsSecurityEnabled, 
                                                           Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                           FontSize="10" Foreground="Green"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Deployment Readiness -->
                        <Border Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Deployment Readiness" FontSize="14" FontWeight="SemiBold"/>
                                
                                <!-- Readiness Checklist -->
                                <StackPanel Margin="0,10,0,0">
                                    <Border Style="{StaticResource MetricCardStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="✅" FontSize="12" Margin="0,0,5,0"/>
                                                <TextBlock Grid.Column="1" Text="Configuration Valid" FontSize="10"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="✅" FontSize="12" Margin="0,0,5,0"/>
                                                <TextBlock Grid.Column="1" Text="Security Hardened" FontSize="10"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="✅" FontSize="12" Margin="0,0,5,0"/>
                                                <TextBlock Grid.Column="1" Text="Monitoring Active" FontSize="10"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="✅" FontSize="12" Margin="0,0,5,0"/>
                                                <TextBlock Grid.Column="1" Text="Performance Optimized" FontSize="10"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Deployment Actions -->
                                <StackPanel Margin="0,15,0,0">
                                    <Button Content="📦 Create MSI Package" Command="{Binding CreateMSICommand}"
                                            Style="{StaticResource ActionButtonStyle}" Background="#28A745"/>
                                    <Button Content="📊 Generate Documentation" Command="{Binding GenerateDocsCommand}"
                                            Style="{StaticResource ActionButtonStyle}" Background="#17A2B8"/>
                                    <Button Content="🧪 Run Final Tests" Command="{Binding RunFinalTestsCommand}"
                                            Style="{StaticResource ActionButtonStyle}" Background="#FFC107" 
                                            Foreground="#212529"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Footer -->
                <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1" 
                        CornerRadius="8" Padding="20" Margin="0,20,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="🎉 Production Readiness Status" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="All systems ready for production deployment" FontSize="14" 
                                       Foreground="#28A745" FontWeight="SemiBold" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Ready for deployment!" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#28A745" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Border Background="#28A745" Style="{StaticResource StatusIndicatorStyle}" 
                                    Width="16" Height="16"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>