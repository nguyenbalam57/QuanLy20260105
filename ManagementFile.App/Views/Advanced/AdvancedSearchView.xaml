<UserControl x:Class="ManagementFile.App.Views.Advanced.AdvancedSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementFile.App.Views.Advanced"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Styles -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#7D3C98"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Search Icon -->
                                <TextBlock Grid.Column="0" Text="🔍" FontSize="18" 
                                           VerticalAlignment="Center" Margin="10,0,5,0" 
                                           Foreground="#7F8C8D"/>

                                <!-- Text Input -->
                                <ScrollViewer Grid.Column="1" x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              VerticalScrollBarVisibility="Hidden"
                                              HorizontalScrollBarVisibility="Hidden"/>

                                <!-- Clear Button -->
                                <Button Grid.Column="2" Content="✕" FontSize="14" 
                                        Width="24" Height="24" Margin="5,0,10,0"
                                        Background="Transparent" BorderThickness="0"
                                        Foreground="#BDC3C7" Cursor="Hand"
                                        Command="{Binding ClearSearchCommand}"
                                        Visibility="{Binding HasSearchText, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#7D3C98"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#7D3C98"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D5DBDB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchResultItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F2F6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuggestionItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E8F4FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F6FA">
        <!-- Loading Overlay -->
        <Grid Background="#80FFFFFF" Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="250" Height="4" Margin="0,0,0,20"/>
                <TextBlock Text="Searching..." FontSize="16" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Header -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" Padding="30,20">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="🔍 Advanced Search" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

                    <!-- Search Box -->
                    <TextBox x:Name="SearchTextBox"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SearchBoxStyle}"
                             KeyDown="SearchTextBox_KeyDown"
                             Margin="0,0,0,15"/>

                    <!-- Quick Filters -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Quick Filters:" FontSize="12" FontWeight="SemiBold" 
                                   VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#7F8C8D"/>
                        <ToggleButton Content="All" Style="{StaticResource FilterButtonStyle}" 
                                      IsChecked="{Binding FilterAll}"/>
                        <ToggleButton Content="Projects" Style="{StaticResource FilterButtonStyle}" 
                                      IsChecked="{Binding FilterProjects}"/>
                        <ToggleButton Content="Tasks" Style="{StaticResource FilterButtonStyle}" 
                                      IsChecked="{Binding FilterTasks}"/>
                        <ToggleButton Content="Files" Style="{StaticResource FilterButtonStyle}" 
                                      IsChecked="{Binding FilterFiles}"/>
                        <ToggleButton Content="Users" Style="{StaticResource FilterButtonStyle}" 
                                      IsChecked="{Binding FilterUsers}"/>
                        <ToggleButton Content="Reports" Style="{StaticResource FilterButtonStyle}" 
                                      IsChecked="{Binding FilterReports}"/>
                    </StackPanel>

                    <!-- Search Actions -->
                    <StackPanel Orientation="Horizontal">
                        <Button Content="🔍 Search" Command="{Binding SearchCommand}"
                                Background="#7D3C98" Foreground="White" BorderThickness="0"
                                Padding="15,8" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#6C3483"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#5B2C6F"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="🗑️ Clear" Command="{Binding ClearSearchCommand}"
                                Background="#95A5A6" Foreground="White" BorderThickness="0"
                                Padding="12,8" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#7F8C8D"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#6C7B7D"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="⚙️ Advanced" Command="{Binding ShowAdvancedFiltersCommand}"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Padding="12,8" FontWeight="SemiBold" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2980B9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#21618C"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Search Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Search Results -->
                <DockPanel Grid.Column="0" Margin="20">
                    <!-- Results Header -->
                    <Border DockPanel.Dock="Top" Background="White" BorderBrush="#E1E5E9" 
                            BorderThickness="1,1,1,0" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="📊 Search Results" FontSize="16" FontWeight="SemiBold" 
                                           Foreground="#2C3E50" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SearchResultsCountText}" FontSize="12" 
                                           Foreground="#7F8C8D" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ComboBox Width="120" Height="30" Margin="0,0,10,0"
                                          SelectedItem="{Binding SortBy}">
                                    <ComboBoxItem Content="Relevance"/>
                                    <ComboBoxItem Content="Date"/>
                                    <ComboBoxItem Content="Name"/>
                                    <ComboBoxItem Content="Type"/>
                                </ComboBox>

                                <Button Content="📤 Export" Command="{Binding ExportResultsCommand}"
                                        Background="#27AE60" Foreground="White" BorderThickness="0"
                                        Padding="10,6" FontSize="12" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#229954"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter Property="Background" Value="#1E8449"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Results List -->
                    <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1">
                        <ListBox ItemsSource="{Binding SearchResults}" 
                                 SelectedItem="{Binding SelectedResult}"
                                 ItemContainerStyle="{StaticResource SearchResultItemStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 MouseDoubleClick="SearchResults_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="20" 
                                                   VerticalAlignment="Top" Margin="0,0,15,0"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#2C3E50" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                       Foreground="#7F8C8D" TextTrimming="CharacterEllipsis" 
                                                       Margin="0,2,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="#ECF0F1" CornerRadius="2" Padding="4,2" Margin="0,0,5,0">
                                                    <TextBlock Text="{Binding Category}" FontSize="10" Foreground="#2C3E50"/>
                                                </Border>
                                                <TextBlock Text="{Binding Path}" FontSize="10" Foreground="#95A5A6" 
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Relevance Score -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding RelevanceScore, StringFormat=F1}" FontSize="12" 
                                                       FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                                            <TextBlock Text="relevance" FontSize="9" Foreground="#7F8C8D" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </DockPanel>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1" Width="5" Background="#E1E5E9" 
                              HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

                <!-- Sidebar -->
                <StackPanel Grid.Column="2" Margin="10,20,20,20">

                    <!-- Search Suggestions -->
                    <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1" 
                            CornerRadius="8" Margin="0,0,0,20" 
                            Visibility="{Binding HasSuggestions, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <Border Background="#F8F9FA" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" 
                                    CornerRadius="8,8,0,0" Padding="15,10">
                                <TextBlock Text="💡 Suggestions" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"/>
                            </Border>

                            <ListBox ItemsSource="{Binding SearchSuggestions}" MaxHeight="200"
                                     ItemContainerStyle="{StaticResource SuggestionItemStyle}"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     MouseDoubleClick="SuggestionsList_MouseDoubleClick">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Text}" FontSize="12" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Type}" FontSize="10" Foreground="#7F8C8D" 
                                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Search History -->
                    <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1" 
                            CornerRadius="8" Margin="0,0,0,20"
                            Visibility="{Binding HasSearchHistory, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <Border Background="#F8F9FA" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" 
                                    CornerRadius="8,8,0,0" Padding="15,10">
                                <Grid>
                                    <TextBlock Text="🕒 Recent Searches" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                    <Button Content="🗑️" HorizontalAlignment="Right" Background="Transparent" 
                                            BorderThickness="0" Foreground="#95A5A6" FontSize="12" Cursor="Hand"
                                            Command="{Binding ClearHistoryCommand}" ToolTip="Clear history"/>
                                </Grid>
                            </Border>

                            <ListBox ItemsSource="{Binding RecentSearches}" MaxHeight="150"
                                     ItemContainerStyle="{StaticResource SuggestionItemStyle}"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Query}" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding SearchTime, StringFormat='HH:mm'}" FontSize="10" 
                                                       Foreground="#7F8C8D"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Saved Filters -->
                    <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1" 
                            CornerRadius="8" Margin="0,0,0,20"
                            Visibility="{Binding HasSavedFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <Border Background="#F8F9FA" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" 
                                    CornerRadius="8,8,0,0" Padding="15,10">
                                <Grid>
                                    <TextBlock Text="📂 Saved Filters" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                    <Button Content="💾" HorizontalAlignment="Right" Background="Transparent" 
                                            BorderThickness="0" Foreground="#3498DB" FontSize="12" Cursor="Hand"
                                            Command="{Binding SaveCurrentFilterCommand}" ToolTip="Save current filter"/>
                                </Grid>
                            </Border>

                            <ListBox ItemsSource="{Binding SavedFilters}" MaxHeight="150"
                                     ItemContainerStyle="{StaticResource SuggestionItemStyle}"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="SemiBold" 
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Description}" FontSize="10" 
                                                           Foreground="#7F8C8D" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="🗑️" Background="Transparent" 
                                                    BorderThickness="0" Foreground="#E74C3C" FontSize="10" 
                                                    Cursor="Hand" ToolTip="Delete filter"
                                                    Command="{Binding DataContext.DeleteFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding Id}"
                                                    Visibility="{Binding IsDefault, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Search Statistics -->
                    <Border Background="White" BorderBrush="#E1E5E9" BorderThickness="1" CornerRadius="8">
                        <StackPanel>
                            <Border Background="#F8F9FA" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" 
                                    CornerRadius="8,8,0,0" Padding="15,10">
                                <TextBlock Text="📊 Search Stats" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"/>
                            </Border>

                            <StackPanel Margin="15">
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Results Found:" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SearchResultsCount}" FontSize="12" FontWeight="SemiBold"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Search Time:" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="{Binding LastSearchTimeText}" FontSize="12"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Active Filter:" FontSize="12"/>
                                    <TextBlock Grid.Column="1" Text="{Binding ActiveFilterName}" FontSize="12" FontWeight="SemiBold"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
