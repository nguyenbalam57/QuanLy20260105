<UserControl x:Class="ManagementFile.App.Views.Advanced.AdvancedSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Styles -->
        <Style x:Key="AdvancedTabStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1,1,1,0" 
                                CornerRadius="8,8,0,0" Padding="15,10" Margin="2,0">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#7D3C98"/>
                                <Setter Property="Foreground" Value="#7D3C98"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E9ECEF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AdvancedGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="AdvancedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#7D3C98"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6C3483"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5B2C6F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PerformanceCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1" Color="Gray"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MetricTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F6FA">
        <!-- Loading Overlay -->
        <Grid Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="250" Height="4" Margin="0,0,0,20"/>
                <TextBlock Text="{Binding LoadingMessage}" FontSize="16" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="⚙️ Advanced Settings &amp; Performance" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                        <TextBlock Text="Power user settings, performance monitoring, and system optimization" FontSize="16" Foreground="#7F8C8D"/>
                    </StackPanel>

                    <!-- Performance Status -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="{Binding PerformanceStatusColor}" Padding="8,4" CornerRadius="4" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding PerformanceStatus}" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>
                        </Border>
                        <Button Content="🔄 Refresh" Style="{StaticResource AdvancedButtonStyle}" 
                                Command="{Binding RefreshPerformanceCommand}" Background="#3498DB"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content - Advanced Settings Tabs -->
            <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}" Background="Transparent" BorderThickness="0">

                <!-- Performance Monitoring Tab -->
                <TabItem Header="📊 Performance Monitor" Style="{StaticResource AdvancedTabStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <!-- Real-time Performance Metrics -->
                            <GroupBox Header="🔥 Real-time Performance Metrics" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- CPU Usage -->
                                    <Border Grid.Column="0" Style="{StaticResource PerformanceCardStyle}">
                                        <StackPanel>
                                            <TextBlock Text="CPU Usage" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding CpuUsage}" Style="{StaticResource MetricTextStyle}" Foreground="#E74C3C"/>
                                            <ProgressBar Value="{Binding CpuUsageValue}" Maximum="100" Height="8" Margin="0,5" 
                                                         Foreground="#E74C3C" Background="#ECF0F1"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Memory Usage -->
                                    <Border Grid.Column="1" Style="{StaticResource PerformanceCardStyle}">
                                        <StackPanel>
                                            <TextBlock Text="Memory Usage" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding MemoryUsage}" Style="{StaticResource MetricTextStyle}" Foreground="#F39C12"/>
                                            <ProgressBar Value="{Binding MemoryUsageValue}" Maximum="500" Height="8" Margin="0,5" 
                                                         Foreground="#F39C12" Background="#ECF0F1"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Thread Count -->
                                    <Border Grid.Column="2" Style="{StaticResource PerformanceCardStyle}">
                                        <StackPanel>
                                            <TextBlock Text="Active Threads" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding ThreadCount}" Style="{StaticResource MetricTextStyle}" Foreground="#3498DB"/>
                                            <ProgressBar Value="{Binding ThreadCountValue}" Maximum="100" Height="8" Margin="0,5" 
                                                         Foreground="#3498DB" Background="#ECF0F1"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Startup Time -->
                                    <Border Grid.Column="3" Style="{StaticResource PerformanceCardStyle}">
                                        <StackPanel>
                                            <TextBlock Text="Startup Time" FontSize="12" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding StartupTime}" Style="{StaticResource MetricTextStyle}" Foreground="#27AE60"/>
                                            <TextBlock Text="Application boot time" FontSize="10" Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </GroupBox>

                            <!-- Performance Actions -->
                            <GroupBox Header="⚡ Performance Actions" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <TextBlock Text="Optimize application performance with these tools:" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,10">
                                        <Button Content="🗑️ Force Garbage Collection" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ForceGarbageCollectionCommand}" Background="#E74C3C"/>
                                        <Button Content="🔄 Clear Cache" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ClearCacheCommand}" Background="#F39C12"/>
                                        <Button Content="📊 Export Performance Report" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ExportPerformanceReportCommand}" Background="#27AE60"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding LastOptimizationText}" FontSize="12" Foreground="#7F8C8D" Margin="0,10"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Performance Issues -->
                            <GroupBox Header="⚠️ Performance Issues" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <TextBlock Text="Current performance issues and recommendations:" FontSize="14" Margin="0,0,0,10"/>
                                    
                                    <ItemsControl ItemsSource="{Binding PerformanceIssues}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FEF9E7" BorderBrush="#F4D03F" BorderThickness="1" 
                                                        CornerRadius="4" Padding="10" Margin="0,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="⚠️" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <TextBlock Text="{Binding}" FontSize="13" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <TextBlock Text="No performance issues detected" FontSize="14" Foreground="#27AE60" 
                                               Visibility="{Binding HasNoIssues, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Performance History -->
                            <GroupBox Header="📈 Performance History" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <TextBlock Text="Performance metrics over time:" FontSize="14" Margin="0,0,0,10"/>
                                    
                                    <!-- Simple performance history list -->
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding PerformanceHistory}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#FAFAFA" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" Padding="10,5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="{Binding TimestampText}" FontSize="11" 
                                                                       Foreground="#95A5A6" VerticalAlignment="Center" Width="60"/>
                                                            <ProgressBar Grid.Column="1" Value="{Binding CpuUsage}" Maximum="100" Height="6" 
                                                                         Margin="10,0" VerticalAlignment="Center" Foreground="#E74C3C"/>
                                                            <TextBlock Grid.Column="2" Text="{Binding CpuText}" FontSize="11" 
                                                                       Foreground="#E74C3C" VerticalAlignment="Center" Width="50"/>
                                                            <TextBlock Grid.Column="3" Text="{Binding MemoryText}" FontSize="11" 
                                                                       Foreground="#F39C12" VerticalAlignment="Center" Width="70"/>
                                                            <TextBlock Grid.Column="4" Text="{Binding ThreadCount}" FontSize="11" 
                                                                       Foreground="#3498DB" VerticalAlignment="Center" Width="30"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Content="📊 View Detailed Chart" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ViewPerformanceChartCommand}" Background="#9B59B6"/>
                                        <Button Content="🗑️ Clear History" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ClearPerformanceHistoryCommand}" Background="#95A5A6"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- System Optimization Tab -->
                <TabItem Header="🔧 Optimization" Style="{StaticResource AdvancedTabStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <!-- Memory Optimization -->
                            <GroupBox Header="💾 Memory Optimization" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox IsChecked="{Binding AutoGarbageCollection}" Content="Enable automatic garbage collection" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableMemoryProfiling}" Content="Enable memory profiling" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding OptimizeForLowMemory}" Content="Optimize for low memory systems" 
                                              FontSize="14" Margin="0,10"/>
                                    
                                    <TextBlock Text="Memory optimization settings help reduce memory footprint and improve performance on resource-constrained systems." 
                                               FontSize="12" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,10"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- UI Optimization -->
                            <GroupBox Header="🎨 UI Optimization" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox IsChecked="{Binding EnableVirtualization}" Content="Enable UI virtualization for large lists" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableAnimations}" Content="Enable smooth animations and transitions" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableHardwareAcceleration}" Content="Enable hardware acceleration" 
                                              FontSize="14" Margin="0,10"/>
                                    
                                    <TextBlock Text="Animation Quality:" FontSize="14" Margin="0,15,0,5"/>
                                    <ComboBox SelectedItem="{Binding AnimationQuality}" Width="200" HorizontalAlignment="Left">
                                        <ComboBoxItem Content="Disabled"/>
                                        <ComboBoxItem Content="Basic"/>
                                        <ComboBoxItem Content="Standard"/>
                                        <ComboBoxItem Content="High Quality"/>
                                    </ComboBox>
                                </StackPanel>
                            </GroupBox>

                            <!-- Background Processing -->
                            <GroupBox Header="⚙️ Background Processing" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox IsChecked="{Binding EnableBackgroundSync}" Content="Enable background data synchronization" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableAutoSave}" Content="Enable automatic data saving" 
                                              FontSize="14" Margin="0,10"/>
                                    
                                    <TextBlock Text="Background Thread Priority:" FontSize="14" Margin="0,15,0,5"/>
                                    <ComboBox SelectedItem="{Binding BackgroundThreadPriority}" Width="200" HorizontalAlignment="Left">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Below Normal"/>
                                        <ComboBoxItem Content="Normal"/>
                                        <ComboBoxItem Content="Above Normal"/>
                                    </ComboBox>
                                </StackPanel>
                            </GroupBox>

                            <!-- Advanced Network Settings -->
                            <GroupBox Header="🌐 Network Optimization" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox IsChecked="{Binding EnableRequestCaching}" Content="Enable API request caching" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableCompression}" Content="Enable data compression" 
                                              FontSize="14" Margin="0,10"/>
                                    
                                    <TextBlock Text="Connection Timeout (seconds):" FontSize="14" Margin="0,15,0,5"/>
                                    <Slider Value="{Binding ConnectionTimeout}" Minimum="5" Maximum="120" Width="300" 
                                            HorizontalAlignment="Left" TickPlacement="BottomRight" TickFrequency="15"/>
                                    <TextBlock Text="{Binding ConnectionTimeout}" FontSize="12" Foreground="#7F8C8D"/>
                                    
                                    <TextBlock Text="Retry Attempts:" FontSize="14" Margin="0,15,0,5"/>
                                    <Slider Value="{Binding RetryAttempts}" Minimum="0" Maximum="10" Width="300" 
                                            HorizontalAlignment="Left" TickPlacement="BottomRight" TickFrequency="1"/>
                                    <TextBlock Text="{Binding RetryAttempts}" FontSize="12" Foreground="#7F8C8D"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Developer Tools Tab -->
                <TabItem Header="🛠️ Developer Tools" Style="{StaticResource AdvancedTabStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <!-- Debug Settings -->
                            <GroupBox Header="🐛 Debug Settings" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox IsChecked="{Binding EnableDebugMode}" Content="Enable debug mode" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableVerboseLogging}" Content="Enable verbose logging" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnablePerformanceLogging}" Content="Enable performance logging" 
                                              FontSize="14" Margin="0,10"/>
                                    
                                    <TextBlock Text="Log Level:" FontSize="14" Margin="0,15,0,5"/>
                                    <ComboBox SelectedItem="{Binding LogLevel}" Width="200" HorizontalAlignment="Left">
                                        <ComboBoxItem Content="Error"/>
                                        <ComboBoxItem Content="Warning"/>
                                        <ComboBoxItem Content="Information"/>
                                        <ComboBoxItem Content="Debug"/>
                                        <ComboBoxItem Content="Trace"/>
                                    </ComboBox>
                                </StackPanel>
                            </GroupBox>

                            <!-- API Configuration -->
                            <GroupBox Header="🔌 API Configuration" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <TextBlock Text="API Base URL:" FontSize="14" Margin="0,10,0,5"/>
                                    <TextBox Text="{Binding ApiBaseUrl}" Width="400" HorizontalAlignment="Left" Padding="8"/>
                                    
                                    <TextBlock Text="API Timeout (milliseconds):" FontSize="14" Margin="0,15,0,5"/>
                                    <TextBox Text="{Binding ApiTimeout}" Width="200" HorizontalAlignment="Left" Padding="8"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                        <Button Content="🔍 Test Connection" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding TestApiConnectionCommand}" Background="#3498DB"/>
                                        <Button Content="📊 View API Stats" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ViewApiStatsCommand}" Background="#9B59B6"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <!-- System Information -->
                            <GroupBox Header="📋 System Information" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Application Version:" FontSize="14" FontWeight="SemiBold" Margin="0,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ApplicationVersion}" FontSize="14" Margin="10,5"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Framework Version:" FontSize="14" FontWeight="SemiBold" Margin="0,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FrameworkVersion}" FontSize="14" Margin="10,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Operating System:" FontSize="14" FontWeight="SemiBold" Margin="0,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding OperatingSystem}" FontSize="14" Margin="10,5"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Total Memory:" FontSize="14" FontWeight="SemiBold" Margin="0,5"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TotalSystemMemory}" FontSize="14" Margin="10,5"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Processor Count:" FontSize="14" FontWeight="SemiBold" Margin="0,5"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ProcessorCount}" FontSize="14" Margin="10,5"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Uptime:" FontSize="14" FontWeight="SemiBold" Margin="0,5"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ApplicationUptime}" FontSize="14" Margin="10,5"/>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                        <Button Content="📋 Copy to Clipboard" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding CopySystemInfoCommand}" Background="#27AE60"/>
                                        <Button Content="📄 Export System Report" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ExportSystemReportCommand}" Background="#F39C12"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Advanced Features Tab -->
                <TabItem Header="⭐ Advanced Features" Style="{StaticResource AdvancedTabStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <!-- Experimental Features -->
                            <GroupBox Header="🧪 Experimental Features" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <TextBlock Text="⚠️ Warning: These features are experimental and may affect stability." 
                                               FontSize="13" Foreground="#E74C3C" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                    
                                    <CheckBox IsChecked="{Binding EnableAdvancedSearch}" Content="Enable advanced search with AI assistance" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnablePredictiveText}" Content="Enable predictive text input" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableSmartNotifications}" Content="Enable smart notification filtering" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableAutoLayout}" Content="Enable automatic layout optimization" 
                                              FontSize="14" Margin="0,10"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Power User Tools -->
                            <GroupBox Header="⚡ Power User Tools" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <CheckBox IsChecked="{Binding EnableKeyboardShortcuts}" Content="Enable advanced keyboard shortcuts" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableBulkOperations}" Content="Enable bulk operations interface" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableDragDrop}" Content="Enable drag &amp; drop operations" 
                                              FontSize="14" Margin="0,10"/>
                                    <CheckBox IsChecked="{Binding EnableCustomThemes}" Content="Enable custom theme support" 
                                              FontSize="14" Margin="0,10"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                        <Button Content="⌨️ Configure Shortcuts" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ConfigureShortcutsCommand}" Background="#3498DB"/>
                                        <Button Content="🎨 Theme Editor" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding OpenThemeEditorCommand}" Background="#9B59B6"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <!-- Data Management -->
                            <GroupBox Header="📊 Data Management" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <TextBlock Text="Advanced data management and maintenance tools:" 
                                               FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,10">
                                        <Button Content="📤 Export All Data" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ExportAllDataCommand}" Background="#27AE60"/>
                                        <Button Content="📥 Import Data" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ImportDataCommand}" Background="#F39C12"/>
                                        <Button Content="🗑️ Cleanup Orphaned Data" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding CleanupDataCommand}" Background="#E74C3C"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,10">
                                        <Button Content="📊 Data Validation" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ValidateDataCommand}" Background="#3498DB"/>
                                        <Button Content="🔧 Repair Database" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding RepairDatabaseCommand}" Background="#9B59B6"/>
                                        <Button Content="📈 Generate Analytics" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding GenerateAnalyticsCommand}" Background="#7D3C98"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <!-- Reset and Maintenance -->
                            <GroupBox Header="🔄 Reset and Maintenance" Style="{StaticResource AdvancedGroupBoxStyle}">
                                <StackPanel>
                                    <TextBlock Text="⚠️ Danger Zone: These actions cannot be undone." 
                                               FontSize="13" Foreground="#E74C3C" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,10">
                                        <Button Content="🔄 Reset All Settings" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ResetAllSettingsCommand}" Background="#E74C3C"/>
                                        <Button Content="🗑️ Clear All Cache" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding ClearAllCacheCommand}" Background="#F39C12"/>
                                        <Button Content="🧹 Deep Clean" Style="{StaticResource AdvancedButtonStyle}" 
                                                Command="{Binding DeepCleanCommand}" Background="#95A5A6"/>
                                    </StackPanel>

                                    <TextBlock Text="Last maintenance: Never" FontSize="12" Foreground="#7F8C8D" Margin="0,15"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>