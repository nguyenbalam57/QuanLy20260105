<UserControl x:Class="ManagementFile.App.Views.Search.GlobalSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#f8f9fa">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007bff" Padding="30,25" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="🔍 Global Search" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Search across all phases: Projects, Tasks, Files, Users, Reports, and more" 
                          FontSize="16" 
                          Foreground="#e3f2fd" 
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Search Box -->
        <Grid Grid.Row="1" Margin="30,0,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="SearchBox"
                     Grid.Column="0"
                     Height="45"
                     FontSize="16"
                     Padding="15,12"
                     BorderBrush="#dee2e6"
                     BorderThickness="1"
                     Background="White"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            
            <Button Grid.Column="1"
                    Content="🔍 Search"
                    Background="#007bff"
                    Foreground="White"
                    BorderThickness="0"
                    Height="45"
                    Padding="20,12"
                    FontSize="14"
                    Margin="10,0,0,0"
                    Command="{Binding SearchCommand}"/>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="2" Margin="30,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Search Results -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#e9ecef" 
                    BorderThickness="1" 
                    Padding="20"
                    Margin="0,0,20,0">
                <Grid>
                    <!-- No Search Yet -->
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding HasSearchQuery, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                        <TextBlock Text="🔍" FontSize="64" Foreground="#dee2e6" HorizontalAlignment="Center"/>
                        <TextBlock Text="Start typing to search across all phases" 
                                   FontSize="18" 
                                   Foreground="#6c757d" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,20,0,0"/>
                        <TextBlock Text="Search projects, tasks, files, users, reports, and notifications" 
                                   FontSize="14" 
                                   Foreground="#adb5bd" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Search Results -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding HasSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding SearchResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            BorderBrush="#e9ecef" 
                                            BorderThickness="1" 
                                            Margin="0,5"
                                            Padding="15"
                                            Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Icon}" 
                                                       FontSize="20" 
                                                       Margin="0,0,15,0"
                                                       VerticalAlignment="Center"/>

                                            <!-- Content -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}" 
                                                           FontSize="16" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="#212529"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           FontSize="13" 
                                                           Foreground="#6c757d" 
                                                           Margin="0,4,0,0"/>
                                                <TextBlock Text="{Binding Category}" 
                                                           FontSize="11" 
                                                           Foreground="#007bff" 
                                                           Margin="0,6,0,0"/>
                                            </StackPanel>

                                            <!-- Action Button -->
                                            <Button Grid.Column="2" 
                                                    Content="Open" 
                                                    Background="#007bff" 
                                                    Foreground="White" 
                                                    BorderThickness="0" 
                                                    Padding="12,6" 
                                                    FontSize="12"
                                                    Command="{Binding DataContext.OpenResultCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Loading -->
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="⏳" FontSize="32" Foreground="#007bff" HorizontalAlignment="Center"/>
                        <TextBlock Text="Searching across all phases..." 
                                   FontSize="14" 
                                   Foreground="#6c757d" 
                                   Margin="0,10,0,0" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Sidebar -->
            <StackPanel Grid.Column="1">
                <!-- Search Status -->
                <Border Background="White" 
                        BorderBrush="#e9ecef" 
                        BorderThickness="1" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="📊 Search Status" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#212529" 
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Results Found:" 
                                   FontSize="12" 
                                   Foreground="#6c757d"/>
                        <TextBlock Text="{Binding SearchResultsCount}" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#007bff"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Status:" 
                                   FontSize="12" 
                                   Foreground="#6c757d"/>
                        <TextBlock Text="{Binding SearchStatus}" 
                                   FontSize="14" 
                                   Foreground="#28a745"/>
                    </StackPanel>
                </Border>

                <!-- Search Scope -->
                <Border Background="White" 
                        BorderBrush="#e9ecef" 
                        BorderThickness="1" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="🎯 Search Scope" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#212529" 
                                   Margin="0,0,0,15"/>
                        
                        <CheckBox Content="📋 Projects" IsChecked="{Binding SearchProjects}" Margin="0,5"/>
                        <CheckBox Content="✓ Tasks" IsChecked="{Binding SearchTasks}" Margin="0,5"/>
                        <CheckBox Content="📁 Files" IsChecked="{Binding SearchFiles}" Margin="0,5"/>
                        <CheckBox Content="👥 Users" IsChecked="{Binding SearchUsers}" Margin="0,5"/>
                        <CheckBox Content="📊 Reports" IsChecked="{Binding SearchReports}" Margin="0,5"/>
                        <CheckBox Content="🔔 Notifications" IsChecked="{Binding SearchNotifications}" Margin="0,5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>