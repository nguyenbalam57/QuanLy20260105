<Window x:Class="ManagementFile.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementFile.App.Views"
        xmlns:vm="clr-namespace:ManagementFile.App.ViewModels"
        xmlns:controls="clr-namespace:ManagementFile.App.Controls"
        xmlns:prj="clr-namespace:ManagementFile.App.Views.Project"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="900" Width="1600"
        WindowState="Maximized"
        Background="White">
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Enterprise Menu Style -->
        <Style x:Key="EnterpriseMenuStyle" TargetType="Menu">
            <Setter Property="Background" Value="#2c3e50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
        </Style>

        <Style x:Key="EnterpriseMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Enterprise Tab Style -->
        <Style x:Key="EnterpriseTabStyle" TargetType="TabControl">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="EnterpriseTabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                               Background="#ecf0f1" 
                               BorderBrush="#bdc3c7" 
                               BorderThickness="1,1,1,0" 
                               CornerRadius="8,8,0,0"
                               Margin="2,0,0,0"
                               Padding="0">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="10,3"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3498db"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,3,1,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#d5dbdb"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>

        <!-- Enterprise Status Bar Style -->
        <Style x:Key="EnterpriseStatusBarStyle" TargetType="StatusBar">
            <Setter Property="Background" Value="#34495e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="BorderBrush" Value="#2c3e50"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <!-- Loading Overlay Style -->
        <Style x:Key="LoadingOverlayStyle" TargetType="Grid">
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                
            </StackPanel>
            
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" >

                <!-- User Avatar Button -->
                <Button x:Name="UserAvatarButton"
                        Grid.Column="1"
                        Style="{StaticResource UserAvatarButtonStyle}"
                        Click="UserAvatarButton_Click"
                        Margin="0,5,10,5">
                    <TextBlock Text="{Binding Avatar}" 
                             Foreground="White"
                             FontSize="16"
                             FontWeight="Bold"/>
                </Button>

                <!-- Popup for User Menu -->
                <Popup x:Name="UserMenuPopup"
                       PlacementTarget="{Binding ElementName=UserAvatarButton}"
                       Placement="Bottom"
                       HorizontalOffset="-180"
                       VerticalOffset="10"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    <controls:UserMenuPopup x:Name="UserMenuControl"/>
                </Popup>
            </StackPanel>
            
        </StackPanel>
            
        <ContentControl Grid.Row="1" x:Name="ProjectDis">
            
        </ContentControl>

        <!-- Main Content with Unified Tabs -->
        <!--<TabControl Grid.Row="1" 
                    x:Name="MainTabControl"
                    Style="{StaticResource EnterpriseTabStyle}"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Margin="0">

            --><!-- Tab 5: File Management --><!--
            <TabItem Header="📋 Project" 
                     Style="{StaticResource EnterpriseTabItemStyle}"
                     x:Name="ProjectAdTab">
                <ContentControl x:Name="ProjectAdContent">
                    --><!-- FileManagementMainView sẽ được load động -->
                    <!--<TextBlock Text="📁 File Management will be loaded here..." 
                              FontSize="20" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Foreground="#7f8c8d"/>--><!--
                </ContentControl>
            </TabItem>

        </TabControl>-->

        <!-- Enterprise Status Bar -->
        <StatusBar Grid.Row="2" Style="{StaticResource EnterpriseStatusBarStyle}">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding StatusMessage}" x:Name="StatusText" FontSize="12"/>
            </StatusBarItem>

            <Separator Grid.Column="1"/>

            <StatusBarItem Grid.Column="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding IsAdminMode, StringFormat='Mode: {0}'}" FontSize="12"/>
                    <TextBlock Text="{Binding IsAdminMode}" FontSize="12" Margin="5,0,0,0"/>
                </StackPanel>
            </StatusBarItem>

            <Separator Grid.Column="3"/>

            <StatusBarItem Grid.Column="4">
                <TextBlock Text="{Binding UserDisplayText}" 
                          FontSize="12" 
                          x:Name="UserStatusText"/>
            </StatusBarItem>

            <Separator Grid.Column="5"/>

            <StatusBarItem Grid.Column="6">
                <TextBlock x:Name="TimeStatusText"
                          Text="{Binding CurrentTime}" 
                          Foreground="White" 
                          FontSize="12" 
                          FontFamily="Consolas"
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Style="{StaticResource LoadingOverlayStyle}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="300" Height="25" Margin="0,0,0,20">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Foreground" Value="#3498db"/>
                            <Setter Property="Background" Value="#ecf0f1"/>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <TextBlock Text="{Binding LoadingMessage}" 
                          Foreground="White" 
                          FontSize="18"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
