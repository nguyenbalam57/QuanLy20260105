        <Style.Triggers>
            <DataTrigger Binding="{Binding IsViewMode}" Value="True">
                <Setter Property="IsEnabled" Value="False"/>
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
