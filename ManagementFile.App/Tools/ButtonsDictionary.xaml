    <!-- ==================== CheckBox ==================== -->
    
    <Style x:Key="ModernCheckBox" TargetType="CheckBox">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#2C3E50"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="8,0,0,0"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Custom CheckBox -->
                        <Border Grid.Column="0"
                    Name="CheckBoxBorder"
                    Width="20" 
                    Height="20"
                    Background="White"
                    BorderBrush="#BDC3C7"
                    BorderThickness="2"
                    CornerRadius="4"
                    VerticalAlignment="Center">

                            <!-- Check Mark -->
                            <Path Name="CheckMark"
                      Data="M 2 6 L 6 10 L 14 2"
                      Stroke="#27AE60"
                      StrokeThickness="2.5"
                      StrokeLineJoin="Round"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"
                      Visibility="Collapsed"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Content -->
                        <ContentPresenter Grid.Column="1"
                              Margin="{TemplateBinding Padding}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              RecognizesAccessKey="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Checked State -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="CheckBoxBorder" Property="Background" Value="#E8F8F5"/>
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#27AE60"/>
                        </Trigger>

                        <!-- Mouse Over -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#3498DB"/>
                            <Setter TargetName="CheckBoxBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#3498DB" Opacity="0.3" ShadowDepth="0" BlurRadius="6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="CheckBoxBorder" Property="Background" Value="#F8F9FA"/>
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#E8E8E8"/>
                            <Setter Property="Foreground" Value="#7F8C8D"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>

                        <!-- Indeterminate State -->
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="CheckMark" Property="Data" Value="M 4 8 L 12 8"/>
                            <Setter TargetName="CheckMark" Property="Stroke" Value="#F39C12"/>
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="CheckBoxBorder" Property="Background" Value="#FEF9E7"/>
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#F39C12"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsViewMode}" Value="True">
                <Setter Property="IsEnabled" Value="False"/>
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>