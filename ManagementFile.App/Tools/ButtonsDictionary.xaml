    <!-- ==================== TAB TEMPLATES ==================== -->

    <!-- Custom Tab Header Template -->
    <DataTemplate x:Key="TabHeaderTemplate">
        <Border Background="Transparent" 
                ToolTip="{Binding Tooltip}"
                Margin="2,0"
                MinWidth="120">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Indicator / Icon -->
                <Border Grid.Column="0"
                        Width="6"
                        Height="6"
                        CornerRadius="3"
                        Margin="8,0,6,0"
                        VerticalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                    <Setter Property="Background" Value="#FF9800"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsModified}" Value="True">
                                    <Setter Property="Background" Value="#F44336"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>

                <!-- Icon Glyph -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding IconGlyph}" 
                           FontSize="14"
                           Margin="8,0,4,0"
                           VerticalAlignment="Center"
                           Visibility="{Binding IconGlyph, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Title -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding Title}" 
                           FontSize="13"
                           FontWeight="Medium"
                           Margin="4,0,8,0"
                           VerticalAlignment="Center"
                           MaxWidth="180"
                           TextTrimming="CharacterEllipsis"
                           Foreground="#333"/>

                <!-- Pin Button -->
                <Button Grid.Column="2" 
                        Content="{Binding PinIconGlyph}"
                        Command="{Binding PinTabCommand}"
                        Width="20" Height="20"
                        FontSize="12"
                        Margin="2,0"
                        ToolTip="Ghim/Bỏ ghim tab"
                        Visibility="{Binding IsDraggable, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                            <Setter Property="Opacity" Value="0.4"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                    <Setter Property="Foreground" Value="#FF9800"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Close Button -->
                <Button Grid.Column="3" 
                        Content="✕"
                        Command="{Binding CloseTabCommand}"
                        Width="18" Height="18"
                        FontSize="10"
                        Margin="2,0,4,0"
                        ToolTip="Đóng tab (Ctrl+W)"
                        Visibility="{Binding IsCloseable, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                            <Setter Property="Foreground" Value="#999"/>
                            <Setter Property="Opacity" Value="0.5"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                    <Setter Property="Foreground" Value="#F44336"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </DataTemplate>

    <!-- Tab Content Template -->
    <DataTemplate x:Key="TabContentTemplate">
        <Border Background="White" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1,0,1,1"
                CornerRadius="0,0,6,6"
                Padding="0">
            <ContentControl Content="{Binding Content}"/>
        </Border>
    </DataTemplate>


    <!-- ==================== TAB ITEM CONTAINER STYLE ==================== -->
    <Style x:Key="CustomDragablzItemStyle" TargetType="{x:Type dragablz:DragablzItem}">
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dragablz:DragablzItem}">
                    <Border x:Name="Border"
                            Background="#F5F5F5"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6,6,0,0"
                            Padding="0"
                            Margin="0,4,0,0">
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}"
                                        ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Selected State -->
                        <Trigger Property="dragablz:DragablzItem.IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="White"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            <Setter TargetName="Border" Property="BorderThickness" Value="1,3,1,0"/>
                            <Setter TargetName="Border" Property="Margin" Value="0,1,0,0"/>
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#2196F3" 
                                                    Opacity="0.3" 
                                                    ShadowDepth="0" 
                                                    BlurRadius="8"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Hover State (only when not selected) -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="dragablz:DragablzItem.IsSelected" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Border" Property="Background" Value="#FAFAFA"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#BDBDBD"/>
                        </MultiTrigger>

                        <!-- Dragging State -->
                        <Trigger Property="dragablz:DragablzItem.IsDragging" Value="True">
                            <Setter TargetName="Border" Property="Opacity" Value="0.7"/>
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#000000" 
                                                    Opacity="0.5" 
                                                    ShadowDepth="5" 
                                                    BlurRadius="15"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    

