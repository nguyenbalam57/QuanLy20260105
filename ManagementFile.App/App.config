<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>

  <appSettings>
    <!-- API Configuration -->
    <!--<add key="ApiBaseUrl" value="http://localhost:5190" />-->
    <!--<add key="ApiBaseUrl" value="http://192.168.249.54:5190" />-->
    <add key="ApiBaseUrl" value="http://192.168.249.8:5190" />
    <add key="ApiTimeout" value="120" />
    <add key="EnableApiLogging" value="true" />

    <!-- Fallback URL (optional) -->
    <add key="FallbackApiBaseUrl" value="http://localhost:5190" />
    <!-- Base Storage Directory -->
    <add key="BaseStoragePath" value="" />

    <!-- Application Settings -->
    <add key="MaxFileSize" value="104857600" />
    <!-- 100MB -->
    <add key="AllowedFileExtensions" value=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif,.zip,.rar" />
    <add key="SessionTimeoutHours" value="8" />
    <add key="RememberMeTimeoutDays" value="30" />

    <!-- Admin Settings -->
    <add key="EnableAdminMode" value="true" />
    <add key="AdminRoles" value="Admin,Manager" />
    <add key="TempFileCleanupDays" value="7" />
    <add key="BackupRetentionDays" value="90" />

    <!-- Data Storage Settings -->
    <add key="DataDirectory" value="Data" />
    <add key="DataFileName" value="ManagementData.json" />
    <add key="MaxBackupCount" value="10" />
    <add key="AutoBackupEnabled" value="true" />
    <add key="BackupDirectoryName" value="Backups" />

    <!-- Concurrency Control Settings -->
    <add key="FileLockTimeoutSeconds" value="30" />
    <add key="RetryIntervalMs" value="100" />
    <add key="EnableOptimisticLocking" value="true" />
    <add key="MaxRetryAttempts" value="3" />
    <add key="EnableConcurrencyLogging" value="true" />

    <!-- Audit Logging Settings -->
    <add key="EnableAuditLogging" value="true" />
    <add key="AuditLogRetentionDays" value="365" />
    <add key="AuditLogDirectory" value="AuditLogs" />

    <!-- Activity Logging Settings -->
    <add key="EnableActivityLogging" value="true" />
    <add key="ActivityLogRetentionDays" value="30" />
    <add key="DetailedActivityLogging" value="true" />
    <add key="ActivityLogMaxFileSizeMB" value="10" />
    <add key="ActivityLogRotationEnabled" value="true" />

    <!-- Performance Settings -->
    <add key="MaxDataFileSizeMB" value="50" />
    <add key="EnableDataCompression" value="false" />
    <add key="MemoryThresholdMB" value="512" />
    <add key="EnablePerformanceMonitoring" value="true" />

    <!-- Notification Settings -->
    <add key="NotificationRetentionDays" value="90" />
    <add key="EnableEmailNotifications" value="false" />
    <add key="EmailServerHost" value="localhost" />
    <add key="EmailServerPort" value="587" />

    <!-- Demo & Testing Settings -->
    <add key="EnableDemoMode" value="false" />
    <add key="DemoDataGenerationCount" value="10" />
    <add key="EnableTestingFeatures" value="true" />
    <add key="SimulateNetworkDelay" value="0" />

    <!-- Enhanced Demo Settings (for testing the enhanced features) -->
    <add key="EnhancedDemoRetryAttempts" value="2" />
    <add key="EnhancedDemoDelayMs" value="300" />
    <add key="MockDataEnabled" value="true" />
    <add key="SequentialMultiUserMode" value="true" />
  </appSettings>

  <system.serviceModel>
    <bindings />
    <client />
  </system.serviceModel>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Extensions.Http" publicKeyToken="adb9793829ddae60" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-9.0.0.9" newVersion="9.0.0.9" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Extensions.DependencyInjection.Abstractions" publicKeyToken="adb9793829ddae60" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-9.0.0.9" newVersion="9.0.0.9" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Extensions.DependencyInjection" publicKeyToken="adb9793829ddae60" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-9.0.0.9" newVersion="9.0.0.9" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>