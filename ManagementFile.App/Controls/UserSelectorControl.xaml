<UserControl x:Class="ManagementFile.App.Controls.UserSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementFile.App.Controls"
             xmlns:conv="clr-namespace:ManagementFile.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <conv:InitialsConverter x:Key="InitialsConverter"/>
        <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>

        <!-- Simplified border style -->
        <Style x:Key="MainBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Input Box -->
        <Border Grid.Row="0" Style="{StaticResource MainBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selected User Display -->
                <Grid Grid.Column="0" 
                      x:Name="SelectedUserDisplay"
                      Margin="12,0,0,0"
                      Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- User Avatar -->
                    <Border Grid.Column="0"
                            Width="24" Height="24" 
                            CornerRadius="12" 
                            Background="#3498DB" 
                            Margin="0,0,8,0"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="UserInitials"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- User Name -->
                    <TextBlock Grid.Column="1" 
                               x:Name="UserNameText"
                               VerticalAlignment="Center"
                               Foreground="#2C3E50"
                               FontSize="14"
                               TextTrimming="CharacterEllipsis"/>
                </Grid>

                <!-- Placeholder Text -->
                <TextBlock Grid.Column="0" 
                           x:Name="PlaceholderText"
                           Text="Chọn người dùng..."
                           VerticalAlignment="Center" 
                           Margin="12,0,0,0"
                           Foreground="#95A5A6"
                           FontSize="14"
                           IsHitTestVisible="False"/>

                <!-- Search TextBox (visible when dropdown is open) -->
                <TextBox Grid.Column="0" 
                         x:Name="SearchBox"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="12,0,0,0"
                         VerticalContentAlignment="Center"
                         GotFocus="SearchBox_GotFocus"
                         LostFocus="SearchBox_LostFocus"
                         KeyDown="SearchBox_KeyDown"
                         FontSize="14"
                         Visibility="Collapsed"
                         TextChanged="SearchBox_TextChanged"/>

                <!-- Action Button (Clear or Dropdown) -->
                <Button Grid.Column="1" 
                        x:Name="ActionButton"
                        Width="32" Height="32" 
                        Margin="0,0,4,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ActionButton_Click">
                    <TextBlock x:Name="ActionIcon"
                               Text="▼"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#7F8C8D"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ECF0F1"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#D5DBDB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Dropdown Popup -->
        <Popup x:Name="UsersPopup"
               Grid.Row="1" 
               StaysOpen="False"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=MainBorderStyle}"
               AllowsTransparency="True"
               PopupAnimation="Slide"
               MinWidth="300">
            <Border BorderThickness="1" 
                    BorderBrush="#BDC3C7" 
                    CornerRadius="4"
                    Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Loading Indicator -->
                    <Border Grid.Row="0" 
                            x:Name="LoadingIndicator"
                            Background="White"
                            MinHeight="100"
                            Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" 
                                         Width="100"
                                         Height="3"
                                         Foreground="#3498DB"/>
                            <TextBlock Text="Đang tải..." 
                                       Foreground="#95A5A6"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Users List -->
                    <ScrollViewer Grid.Row="0" 
                                  x:Name="UsersScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="250">
                        <ListBox x:Name="UsersListBox"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 MouseDoubleClick="UsersListBox_MouseDoubleClick"
                                 PreviewKeyDown="UsersListBox_PreviewKeyDown"
                                 ScrollViewer.CanContentScroll="False">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- User Avatar -->
                                        <Border Grid.Column="0"
                                                Width="32" Height="32" 
                                                CornerRadius="16" 
                                                Background="#3498DB" 
                                                Margin="0,0,10,0">
                                            <TextBlock Text="{Binding FullName, Converter={StaticResource InitialsConverter}}"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Border>

                                        <!-- User Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FullName}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="14"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Email}" 
                                                       Foreground="#7F8C8D"
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}"
                                                        Margin="4,2">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#ECF0F1"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#D6EAF8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <Border Grid.Row="0"
                            x:Name="EmptyState"
                            MinHeight="80"
                            Background="White"
                            Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="👤" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center"
                                       Foreground="#BDC3C7"/>
                            <TextBlock Text="Không tìm thấy người dùng"
                                       HorizontalAlignment="Center"
                                       Foreground="#95A5A6"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Footer -->
                    <Border Grid.Row="1" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="#ECF0F1"
                            Background="#F8F9FA"
                            Padding="8,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left side: User count -->
                            <TextBlock Grid.Column="0"
                                       x:Name="UserCountText"
                                       Text="📊 0 người dùng"
                                       Foreground="#7F8C8D"
                                       FontSize="11"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>

                            <!-- Right side: Keyboard shortcuts -->
                            <TextBlock Grid.Column="1"
                                       Text="F5: Tải lại • Enter: Chọn" 
                                       Foreground="#95A5A6"
                                       FontSize="10"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>