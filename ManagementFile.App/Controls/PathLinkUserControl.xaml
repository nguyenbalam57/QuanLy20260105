<UserControl x:Class="ManagementFile.App.Controls.PathLinkUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementFile.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{Binding HeaderBackground, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                BorderBrush="{Binding HeaderBorderBrush, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                Style="{StaticResource CardStyle}"
                CornerRadius="6,6,0,0">
            <StackPanel>
                <TextBlock x:Name="txtPathCount" 
                           Text="0 đường dẫn được tìm thấy" 
                           FontSize="12" 
                           Foreground="#666"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="15">
            <StackPanel x:Name="contentPanel">
                <!-- Nội dung sẽ được thêm động -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
