<UserControl x:Class="ManagementFile.App.Controls.FileListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementFile.App.Controls"
             xmlns:converters="clr-namespace:ManagementFile.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="400"
             AllowDrop="True"
             Drop="FileListControl_Drop"
             DragOver="FileListControl_DragOver"
             DragEnter="FileListControl_DragEnter"
             DragLeave="FileListControl_DragLeave">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:FileIconConverter x:Key="FileIconConverter"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8E8E8"/>
                                <Setter Property="BorderBrush" Value="#3498DB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D1D1D1"/>
                                <Setter Property="BorderBrush" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                <Setter Property="BorderBrush" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- File Item Style -->
        <Style x:Key="FileItemBorder" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="1" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Custom TextBox Style -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                                Background="White"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"
                                CornerRadius="4,0,0,4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3498DB"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F8F9FA"/>
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Add file controls -->
        <Grid Grid.Row="0" x:Name="AddFileSection">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- TextBox với placeholder manual -->
            <Grid Grid.Column="0">
                <TextBox x:Name="FilePathTextBox" 
                         Style="{StaticResource RoundedTextBox}"
                         KeyDown="FilePathTextBox_KeyDown"
                         TextChanged="FilePathTextBox_TextChanged"/>

                <!-- Placeholder text -->
                <TextBlock x:Name="PlaceholderTextBlock"
                           Text="Nhập đường dẫn file hoặc chọn file..."
                           IsHitTestVisible="False"
                           Foreground="#999"
                           FontSize="13"
                           Margin="16,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="0,0,0,0">
                <Button x:Name="BrowseButton" 
                        Content="📂"
                        Width="40" 
                        Height="40"
                        FontSize="16"
                        Click="BrowseButton_Click"
                        ToolTip="Chọn file (Ctrl+O)"
                        Style="{StaticResource ModernButton}"
                        BorderThickness="1,1,0,1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8E8E8"/>
                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#D1D1D1"/>
                                    <Setter Property="BorderBrush" Value="#2980B9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#BDC3C7"/>
                                    <Setter Property="BorderBrush" Value="#E8E8E8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="AddButton" 
                        Content="➕"
                        Width="40" 
                        Height="40"
                        FontSize="16"
                        Click="AddButton_Click"
                        ToolTip="Thêm file (Enter)"
                        Style="{StaticResource ModernButton}"
                        BorderThickness="1,1,1,1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0,4,4,0"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8E8E8"/>
                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#D1D1D1"/>
                                    <Setter Property="BorderBrush" Value="#2980B9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#BDC3C7"/>
                                    <Setter Property="BorderBrush" Value="#E8E8E8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Drop Zone Indicator -->
        <Border x:Name="DropZone"
                Grid.Row="0"
                BorderBrush="#3498DB"
                BorderThickness="2"
                CornerRadius="4"
                Background="#E8F4FC"
                Opacity="0"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">
                <TextBlock Text="📁" 
                           FontSize="32" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Thả file vào đây" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#3498DB"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- File list -->
        <ScrollViewer Grid.Row="1"
                      x:Name="FileListScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      MaxHeight="200"
                      Margin="0,8,0,0"
                      Visibility="Collapsed">
            <ItemsControl x:Name="FileListPanel">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource FileItemBorder}"
                                MouseLeftButtonDown="FileItem_MouseLeftButtonDown"
                                ContextMenuService.IsEnabled="True">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="📂 Mở file" 
                                              Click="OpenFile_Click"
                                              Tag="{Binding FullPath}"/>
                                    <MenuItem Header="📋 Copy đường dẫn" 
                                              Click="CopyPath_Click"
                                              Tag="{Binding FullPath}"/>
                                    <Separator/>
                                    <MenuItem Header="🗑️ Xóa" 
                                              Click="RemoveFileContextMenu_Click"
                                              Tag="{Binding FullPath}"/>
                                </ContextMenu>
                            </Border.ContextMenu>

                            <Grid MaxWidth="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- File icon -->
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding Extension, Converter={StaticResource FileIconConverter}}" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>

                                <!-- File info -->
                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding FileName}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding FullPath}"
                                               MaxWidth="120"/>
                                    <TextBlock Text="{Binding FileSize}"
                                               FontSize="10"
                                               Foreground="#7F8C8D"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Remove button -->
                                <Button Grid.Column="2"
                                        Content="✕"
                                        FontSize="12"
                                        Width="20"
                                        Height="20"
                                        Margin="8,0,0,0"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#E74C3C"
                                        Tag="{Binding FullPath}"
                                        Click="RemoveFileButton_Click"
                                        ToolTip="Xóa file">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="10">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty state -->
        <Border Grid.Row="1"
                x:Name="EmptyState"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4"
                Background="#FAFAFA"
                Padding="20"
                Margin="0,8,0,0">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="📁" 
                           FontSize="24" 
                           HorizontalAlignment="Center"
                           Foreground="#BDC3C7"/>
                <TextBlock Text="Chưa có file nào"
                           Foreground="#7F8C8D"
                           FontStyle="Italic"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
                <TextBlock x:Name="EmptyStateHint"
                           Text="Kéo thả file hoặc nhấn nút Chọn file"
                           Foreground="#95A5A6"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status/Info Bar -->
        <Grid Grid.Row="2" 
              x:Name="StatusBar"
              Margin="0,8,0,0"
              Visibility="Collapsed">
            <Border x:Name="StatusBorder"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10,6">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="StatusIcon" 
                               FontSize="14"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" 
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>

    <!-- Input Bindings -->
    <UserControl.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{x:Static local:FileListControl.BrowseCommand}"/>
        <KeyBinding Key="Delete" Modifiers="Ctrl" Command="{x:Static local:FileListControl.ClearCommand}"/>
    </UserControl.InputBindings>
</UserControl>